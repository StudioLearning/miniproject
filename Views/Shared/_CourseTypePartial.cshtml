@using Contentful.Core.Models
@using miniproject.Models.Contentful

@model CourseType

@{
    CourseType courseType = Model;
}

<div class="col-6 col-md-3 col-lg-2">
    <span class="fa-stack fa-3x">
        <i class="fas fa-circle fa-stack-2x text-primary"></i>
        <i class="@Html.Raw(courseType.fontIconTag) fa-stack-1x fa-inverse"></i>
    </span>
    <h4 class="my-3">
        <a class="link text-decoration-none" asp-area="" asp-controller="Course" asp-action="Type"
            asp-route-id="@(courseType.name)">
            @(courseType.name)
        </a>
    </h4>
    <p class="text-muted">@(courseType.caption)</p>
</div>