@using miniproject.Models.Contentful

@model Teacher

@{
    Teacher teacher = Model;
}

<div class="col-lg-4">
    <div class="team-member">
        <img class="mx-auto rounded-circle" src="@(teacher.image.File.Url)" alt="teacher" />
        <h4>
            <a class="link text-dark text-decoration-none" asp-area="" asp-controller="Course" asp-action="Teacher"
                asp-route-id="@(teacher.teacherId)">
                @(teacher.teacherName)
            </a>
        </h4>
        <p class="text-muted">@(teacher.position)</p>
        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-twitter"></i></a>
        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-facebook-f"></i></a>
        <a class="btn btn-dark btn-social mx-2" href="#!"><i class="fab fa-linkedin-in"></i></a>
    </div>
</div>