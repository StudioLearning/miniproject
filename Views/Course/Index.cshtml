@using Contentful.Core.Models
@using miniproject.Models.Contentful

@model ContentfulCollection<CourseType>

@{
    ViewData["Title"] = "Course";
    ContentfulCollection<CourseType> courseTypes = Model;
    ContentfulCollection<Teacher> teachers = ViewBag.teachers;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">
            <a><i class="fas fa-home"></i> หน้าแรก</a>
        </li>
    </ol>
</nav>

<div class="row pt-5 pb-5">
    <div class="col-12">
        @Html.Partial("_Stepper", Stepper.SELECT)
    </div>
</div>

<section class="page-section" id="services">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">เลือกหมวดหมู่</h2>
        </div>
        <div class="row justify-content-center text-center">
            @foreach (var courseType in courseTypes)
            {
                @Html.Partial("_CourseTypePartial", courseType)
            }
        </div>
        <div class="text-center mt-5">
            <h2 class="section-heading text-uppercase">เลือกผู้สอน</h2>
        </div>
        <div class="row justify-content-center">
            @foreach (var teacher in teachers)
            {
                @Html.Partial("_TeacherPartial", teacher)
            }
        </div>
    </div>
</section>
